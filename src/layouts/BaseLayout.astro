---
const {
  title = "Nico Abramowski - Portfolio",
  description = "Portfolio and project demos.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Favicon & fonts -->
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen antialiased">
    <div class="grid grid-cols-1 lg:grid-cols-[260px_1fr] min-h-screen">

      <!-- Sidebar -->
      <aside
        class="border-b lg:border-b-0 lg:border-r border-gray-200/70 dark:border-white/10
               bg-white dark:bg-neutral-900 sticky top-0 z-30"
      >
        <div class="p-4">
          <a href={import.meta.env.BASE_URL} class="flex items-center gap-3">
            <img src={`${import.meta.env.BASE_URL}favicon.svg`} alt="logo" class="w-8 h-8" />
            <div>
              <div class="font-bold">Nico Abramowski</div>
              <div class="text-xs text-gray-500">Data / Warehousing</div>
            </div>
          </a>
        </div>

        <nav class="px-2 pb-4 space-y-1 text-sm">
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800"
             href={`${import.meta.env.BASE_URL}about`}>About</a>

          <div class="px-3 pt-3 text-xs uppercase tracking-wider text-gray-500">
            Projects (8-week plan)
          </div>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800"
             href={`${import.meta.env.BASE_URL}projects/mini-warehouse`}>Mini Data Warehouse</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800"
             href={`${import.meta.env.BASE_URL}projects/data-quality-lineage`}>Data Quality &amp; Lineage</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800"
             href={`${import.meta.env.BASE_URL}projects/cdc-warehouse`}>CDC â†’ Warehouse</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800"
             href={`${import.meta.env.BASE_URL}projects/performance-governance`}>Performance &amp; Governance</a>

          <div class="px-3 pt-3 text-xs uppercase tracking-wider text-gray-500">More</div>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800"
             href="https://github.com/Nico-Ab" target="_blank" rel="noreferrer">GitHub</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800"
             href={`${import.meta.env.BASE_URL}cv-placeholder.txt`}>CV (placeholder)</a>
        </nav>

        <div class="px-4 pb-4 flex items-center justify-between text-sm">
          <button id="themeToggle" class="button">Toggle theme</button>
          <a class="text-gray-500 hover:underline" href={import.meta.env.BASE_URL}>Home</a>
        </div>
      </aside>

      <!-- Main content -->
      <main class="bg-white dark:bg-neutral-950">
        <div class="container-xl py-10">
          <slot />
        </div>
      </main>
    </div>

    <!-- Theme: default LIGHT; enable dark only if user chose it or OS prefers it -->
    <script>
      (function () {
        const html = document.documentElement;
        try {
          const saved = localStorage.getItem('theme');
          if (
            saved === 'dark' ||
            (!saved && window.matchMedia('(prefers-color-scheme: dark)').matches)
          ) {
            html.classList.add('dark');
          } else {
            html.classList.remove('dark');
          }

          const btn = document.getElementById('themeToggle');
          if (btn) {
            btn.addEventListener('click', () => {
              html.classList.toggle('dark');
              localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
            });
          }
        } catch (e) {
          // ignore storage errors (e.g., private mode)
        }
      })();
    </script>
  </body>
</html>
