---
const { title = "Nico Abramowski — Data (Warehousing) Portfolio", description = "Portfolio & project demos." } = Astro.props;
---
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen antialiased">
    <div class="grid grid-cols-1 lg:grid-cols-[260px_1fr] min-h-screen">
      <aside class="border-b lg:border-b-0 lg:border-r border-gray-200/70 dark:border-white/10 bg-white/80 dark:bg-neutral-950/80 backdrop-blur sticky top-0 lg:top-0 z-30">
        <div class="p-4">
          <a href="/" class="flex items-center gap-3">
            <img src="/favicon.svg" alt="logo" class="w-8 h-8"/>
            <div>
              <div class="font-bold">Nico Abramowski</div>
              <div class="text-xs text-gray-500">Data / Warehousing</div>
            </div>
          </a>
        </div>
        <nav class="px-2 pb-4 space-y-1 text-sm">
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800" href="/about">About</a>
          <div class="px-3 pt-3 text-xs uppercase tracking-wider text-gray-500">Projects (8-week plan)</div>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800" href="/projects/mini-warehouse">Mini Data Warehouse</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800" href="/projects/data-quality-lineage">Data Quality & Lineage</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800" href="/projects/cdc-warehouse">CDC → Warehouse</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800" href="/projects/performance-governance">Performance & Governance</a>
          <div class="px-3 pt-3 text-xs uppercase tracking-wider text-gray-500">More</div>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800" href="https://github.com/Nico-Ab" target="_blank" rel="noreferrer">GitHub</a>
          <a class="block px-3 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-neutral-800" href="/cv-placeholder.txt">CV (placeholder)</a>
        </nav>
        <div class="px-4 pb-4 flex items-center justify-between text-sm">
          <button id="themeToggle" class="button">Toggle theme</button>
          <a class="text-gray-500 hover:underline" href="/">Home</a>
        </div>
      </aside>
      <main class="bg-gray-50/40 dark:bg-neutral-950">
        <div class="container-xl py-10">
          <slot />
        </div>
      </main>
    </div>
    <script>
      // simple dark mode toggle
      const html = document.documentElement;
      const saved = localStorage.getItem('theme');
      if (saved) {
        if (saved === 'dark') html.classList.add('dark'); else html.classList.remove('dark');
      } else {
        // prefer dark by default (class on html in this layout) – no-op
      }
      const btn = document.getElementById('themeToggle');
      if (btn) {
        btn.addEventListener('click', () => {
          html.classList.toggle('dark');
          localStorage.setItem('theme', html.classList.contains('dark') ? 'dark' : 'light');
        });
      }
    </script>
  </body>
</html>