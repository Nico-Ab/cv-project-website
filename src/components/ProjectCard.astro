
---
export interface Props {
  title: string;
  summary: string;
  href: string;
  stack?: string[];
}
const { title, summary, href, stack = [] } = Astro.props;
---
<a href={href} class="relative block p-[1px] rounded-2xl transition-transform hover:-translate-y-0.5">
  <div class="absolute inset-0 rounded-2xl opacity-60 blur-sm"
       style="background: linear-gradient(135deg, rgba(37,99,235,.35), rgba(34,211,238,.35));"></div>
  <div class="relative card p-5">
    <h3 class="text-lg font-semibold mb-1">{title}</h3>
    <p class="text-sm text-gray-700 dark:text-gray-300">{summary}</p>
    {stack.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {stack.map(s => <span class="text-xs px-2 py-1 rounded bg-gray-100 dark:bg-neutral-800 border border-gray-200 dark:border-white/10">{s}</span>)}
      </div>
    )}
  </div>
</a>
