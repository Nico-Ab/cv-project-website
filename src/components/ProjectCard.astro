---
export interface Props {
  title: string;
  summary: string;
  href: string;
  stack?: string[];
}
const { title, summary, href, stack = [] } = Astro.props;
---
<a href={href} class="card block p-5 hover:shadow-md transition">
  <h3 class="text-lg font-semibold mb-1">{title}</h3>
  <p class="text-sm text-gray-600 dark:text-gray-300">{summary}</p>
  {stack.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-2">
      {stack.map(s => <span class="text-xs px-2 py-1 rounded bg-gray-100 dark:bg-neutral-800 border border-gray-200 dark:border-white/10">{s}</span>)}
    </div>
  )}
</a>