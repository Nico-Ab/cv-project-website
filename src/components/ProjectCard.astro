---
export interface Props {
  title: string;
  summary: string;
  href: string;
  stack?: string[];
}
const { title, summary, href, stack = [] } = Astro.props;
---
<a href={href} class="group relative block">
  <!-- consistent bottom glow for every card -->
  <span
    aria-hidden="true"
    class="absolute z-0 -bottom-3 left-4 right-4 h-6 rounded-[20px]
           opacity-70 group-hover:opacity-100 blur-md transition-all duration-300"
    style="background: linear-gradient(90deg, rgba(37,99,235,.45), rgba(34,211,238,.45));">
  </span>

  <div class="relative z-10 card p-5 rounded-2xl transition-transform duration-200 group-hover:-translate-y-0.5">
    <h3 class="text-lg font-semibold mb-1 text-gray-900 dark:text-gray-100">{title}</h3>
    <p class="text-sm text-gray-700 dark:text-gray-300">{summary}</p>
    {stack.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2">
        {stack.map(s => (
          <span class="text-xs px-2 py-1 rounded bg-gray-100 dark:bg-neutral-800 border border-gray-200 dark:border-white/10">
            {s}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
